[user]
  name = Giacomo Zinetti
  email = giacomo.zinetti@giko.it

[alias]
  co = checkout
  st = status
  ci = commit
  br = branch
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
#  df = "!git diff --color $@ | diff-so-fancy"
  df = "!f() { [ -z \"$GIT_PREFIX\" ] || cd \"$GIT_PREFIX\" && git diff --color \"$@\" | diff-so-fancy  | less --tabs=4 -RFX; }; f"
  yolo = !git add -A && git commit -m \"$(curl -s whatthecommit.com/index.txt)\"

[push]
  default = simple

# so much color
[color]
  ui = always

[color "diff"]
#  meta = yellow bold
  commit = green bold
  frag = magenta bold
#  old = red bold
#  new = green bold
  whitespace = red reverse

[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = "red bold 52"
  newNormal = "green bold"
  newHighlight = "green bold 22"

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "status"]
